            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->

                <p class="mb-4">
                    <button type="button" data-toggle="modal" data-target="#OrderModal" class="btn btn-info">Create new order</button>
                </p>

                @*<button class="dropdown-item" href="#" data-toggle="modal" data-target="#OrderModal">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        Create new order
